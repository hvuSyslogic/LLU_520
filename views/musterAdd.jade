include mixins
extends layout
block content   

            include navbar

            
            div
                form.form-horizontal(method='post')
                    fieldset
                        legend Enter muster details
                        .form-group
                            label.col-lg-2.control-label(for='inputEmail') Muster name
                            .col-lg-10
                                input#inputEmail.form-control(type='text', placeholder='', name='musterName')
                        .form-group
                            label.col-lg-2.control-label(for='inputPassword') Event date
                            .col-lg-10
                                input#inputPassword.form-control(type='date', placeholder='', name='eventDate')
                            label.col-lg-2.control-label(for='inputPassword') Event time
                            .col-lg-10
                                input#inputPassword.form-control(type='time', placeholder='', name='eventTime')
                            label.col-lg-2.control-label(for='inputPassword') Location
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='Location')
                            label.col-lg-2.control-label(for='inputPassword') Muster Captain (employee number)
                            .col-lg-10
                                input#inputPassword.form-control(type='text', name='musterCaptain')
                        .form-group
                          label.col-lg-2.control-label(for='select') Enter number of zones
                          .col-lg-10
                            select#selecttime.form-control(name='Zones')
                              option All
                              option Partial
                        .form-group
                          label.col-lg-2.control-label(for='select') Status
                          .col-lg-10
                            select#selecttime.form-control(name='Status')
                              option Start
                              option Live
                              option Complete
                         .form-group
                            label.col-lg-2.control-label Type
                            .col-lg-10
                                .radio
                                    label
                                        input#optionsRadios1(type='radio', name='Type', value='Emergency', checked='')
                                        |             Emergency
                                .radio
                                    label
                                        input#optionsRadios2(type='radio', name='Type', value='Drill')
                                        |             Drill
                          .form-group
                            label.col-lg-2.control-label(for='inputPassword') Duration (in minutes)
                            .col-lg-10
                                input#inputPassword.form-control(type='text', name='durationMinutes')

                          
                        .form-group
                          .col-lg-10.col-lg-offset-2
                            //-feb--dont need cancel button as could just use browser back button
                            //-button.btn.btn-default(type='reset') Cancel
                            button.btn.btn-primary(type='submit') Submit
               