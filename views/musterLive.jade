include mixins
extends layout
block content   
            include navbar

            head
            //-    meta(http-equiv='refresh', content='10')
            h3 Muster in progress
            

            .progress.progress-striped.active
                if overallProgRound > '20'
                    | #{overallProgress}
                if overallProgRound > '20'
                    .progress-bar.progress-bar-danger(style='width: #{overallProgress}')
                if overallProgRound > '21'
                    .progress-bar.progress-bar-warning(style='width: #{overallProgress}')
            br

           

            .row
                .col-md-6.col-sm-6.col-xs-12
                        .well
                            h4 Remain unaccounted [#{missingCount}]
                        div
                            table#pickle.table.table-hover.table-striped.table-bordered
                                thead
                                    tr
                                        th Badge Id
                                        th First Name
                                        th Last Name
                                tbody
                                -each resEvac in resEvacs
                                    tr
                                        td=resEvac.iClassNumber
                                        td=resEvac.FirstName
                                        td=resEvac.LastName


                .col-md-3.col-sm-6.col-xs-12   
                    .panel.panel-default
                      .panel-body
                        h2 Zone 1
                   
                    .progress.progress-striped.active
                        | #{progress[0].progress1}               
                        .progress-bar.progress-bar-danger(style='width: #{progress[0].progress1}') 
                    br
                    .panel.panel-default
                      .panel-body
                        h2 Zone 2
                
                    .progress.progress-striped.active
                        | #{progress[1].progress2}
                        .progress-bar.progress-bar-warning(style='width: #{progress[1].progress2}')   
                    br
                    .panel.panel-default
                      .panel-body
                        h2 Zone 3
                    
                    .progress.progress-striped.active
                        | #{progress[2].progress3}
                        .progress-bar.progress-bar-danger(style='width: #{progress[2].progress3}') 

                .col-md-3.col-sm-6.col-xs-12   
                    .panel.panel-default
                      .panel-body
                        h2 Zone 4
                    
                    .progress.progress-striped.active
                        | 
                        .progress-bar.progress-bar-success(style='width: #{progress[3].progress4}') 
                    br
                    .panel.panel-default
                      .panel-body
                        h2 Zone 5
                    
                    .progress.progress-striped.active
                        | #{progress[4].progress5}
                        .progress-bar.progress-bar-danger(style='width: #{progress[4].progress5}')   
                    br
                    .panel.panel-default
                      .panel-body
                        h2 Zone 6
                   
                    .progress.progress-striped.active
                        | #{progress[5].progress6}
                        .progress-bar.progress-bar-warning(style='width: #{progress[5].progress6}')
               

            br
            br    
            
            include footer
 
        
   
 




    
