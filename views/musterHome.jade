include mixins
extends layout
block content   

            include navbar

            h3 Muster master list
            br
            div
                table#pickle.table.table-hover.table-striped.table-bordered
                    thead
                        tr  
                            th
                            th Muster ID
                            th Muster Name
                            th Location
                            th Date/Time
                            th Muster Captain
                            th Status
                            th Type
                            th Zones
                    tbody
                        -each result in results
                            tr
                                    td
                                        a(href="/musterLive/#{result.musterID}") Live |
                                        br
                                        a(href="/musterDetail/#{result.musterID}") Detail
                                    td=result.musterID
                                    td=result.musterName
                                    td=result.Location
                                    td=result.dateTime
                                    td=result.musterCaptain
                                    td=result.Status
                                    td=result.Type
                                    td=result.Zones
                script.
                    $(document).ready(function() {
                    $('#pickle').DataTable();
                    });
                script.
                    $(document).ready(function() {
                    $('#pickle tr').click(function() {
                    var href = $(this).find("a").attr("href");
                        if(href) {
                            window.location = href;
                        }
                    });
                    });

             div 
                br
                a.btn.btn-primary.btn-lg(href='musterAdd', role='button') Add Muster Event
           